    "emitDecoratorMetadata": true,
    "strict": true,
    "lib": ["es6", "dom"],
    "target": "es6",
    "module": "CommonJS",
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
